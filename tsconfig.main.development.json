{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2017",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "newLine": "LF"
  },
  "include": [
    "src/main.ts",
    "src/preload.ts"    
  ],
}
