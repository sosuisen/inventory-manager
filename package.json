{
  "name": "inventory-manager",
  "productName": "Inventory Manager",
  "version": "0.1.0",
  "description": "Manage what's in the box",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rm -r dist",
    "copy-static": "npm run clean && cp -r html dist && cp ./node_modules/react/umd/react.production.min.js ./dist/ && cp ./node_modules/react-dom/umd/react-dom.production.min.js ./dist/",
    "compile": "npm run lint && npx tsc -p tsconfig.main.production.json && npx webpack --config webpack.renderer.production.js",
    "compile-debug": "npm run lint  && npx tsc -p tsconfig.main.development.json && npx webpack --config webpack.renderer.development.js",
    "start": "npm run copy-static && npm run compile && npx electron .",
    "/* debug-main */": "/* Please launch [Main (inventory-manager)] from VSCode debugger after compile-debug */",
    "/* debug-renderer */": "/* Please launch [Renderer (inventory-manager)] from VSCode debugger after compile-debug and [Main (inventory-manager)] */",
    "rebuild-native": "npx electron-rebuild",
    "make": "npm run copy-static && npm run compile && node packager.mjs",
    "publish": "electron-forge publish",
    "lint": "eslint --fix --ignore-path .gitignore ."
  },
  "keywords": [],
  "author": {
    "name": "Hidekazu Kubota",
    "email": "hidekazu.kubota@gmail.com"
  },
  "license": "MPL-2.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "appCopyright": "Copyright(C) 2021 Hidekazu Kubota",
        "asar": true,
        "icon": "assets/inventory_manager_icon",
        "win32metadata": {
          "ProductName": "Inventory Manager",
          "FileDescription": "Inventory Manager"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "inventory-manager"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^16.9.49",
    "@types/react-css-modules": "^4.6.2",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "electron": "^11.2.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-packager": "^15.2.0",
    "electron-rebuild": "^2.3.4",
    "eslint": "^7.8.1",
    "eslint-config-standardize": "^0.7.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "source-map-loader": "^1.1.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.4"
  },
  "dependencies": {
    "babel-plugin-react-css-modules": "^5.2.6",
    "electron-connect": "^0.6.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^6.0.1",
    "git-documentdb": "^0.1.1",
    "nanoid": "^3.1.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "redux": "^4.0.5",
    "style-loader": "^1.2.1",
    "typed-intl": "^1.0.3"
  }
}
